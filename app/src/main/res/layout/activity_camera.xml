        android:layout_height="14px"
        android:layout_marginStart="860px"
        android:layout_marginTop="1041px"/>
    <ImageView
        android:id="@+id/robot"
        android:background="@drawable/robot"
        android:layout_width="440px"
        android:layout_height="322px"
        android:layout_marginStart="738px"
        android:layout_marginTop="681px"/>
<!--        tools:srcCompat="@tools:sample/avatars" />-->
    <!--    存放计时器的空间-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textColorLink="#9C27B0"
        android:textSize="70sp" />
<!--    拍照按钮-->
    <ImageButton
        android:id="@+id/takePhoto"
        android:layout_width="167px"
        android:layout_height="166px"
        android:layout_centerVertical="true"
        android:layout_marginStart="1693px"
        android:layout_marginTop="517px"
        android:background="@drawable/quickstart"
        android:onClick="takephoto"
        android:text="@string/拍照" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="94px"
        android:layout_height="76px"
        android:layout_marginStart="60px"
        android:layout_marginTop="17px"
        android:background="@drawable/back"
        android:onClick="back" />
