        android:id="@+id/getTrail"
        android:layout_width="556px"
        android:layout_height="252px"
        android:background="@drawable/change_sure"
        android:layout_marginStart="976px"
        android:layout_marginTop="914px"
        android:onClick="getTrail"
        android:text="@string/开始作画" />

    <ImageButton
        android:id="@+id/retake"
        android:layout_width="556px"
        android:layout_height="252px"
