        android:layout_marginTop="139px"
        android:background="@drawable/image_back"
        android:contentDescription="@string/todo"
        />
    <ImageView
        android:id="@+id/waiting_image"
        android:layout_width="481px"
        android:layout_height="412px"
        android:layout_marginStart="263px"
        android:layout_marginTop="346px"/>
    <ImageView
        android:id="@+id/line"
        android:layout_width="522px"
        android:layout_height="230px"
        android:layout_marginStart="580px"
        android:layout_marginTop="378px"
